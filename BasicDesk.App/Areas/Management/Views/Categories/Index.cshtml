@model CategoryIndexModel
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Manage Request Categories</h2>
<hr />

<div class="col-md-4 col-lg-offset-4">
    <form method="post" class="form-horizontal">
        <h3 class="text-center">Create new category</h3>
        <hr />
        @Html.InputFormGroupFor(m => m.CategoryCreationBindingModel.Name)
        <div class="form-group">
            <div class="col-sm-10 col-sm-push-4">
                <input type="submit" value="Create" class="btn btn-success" asp-area="Management" asp-controller="Categories" asp-action="Create" />
                <a asp-page="/Index" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </form>
    <h3 class="text-center">Current categories</h3>
    <hr />
    <table class="table table-striped">
        <thead class="">
            <tr>
                <th>
                    <strong>Name</strong>
                </th>
                <th>
                    <strong>Action</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoryViewModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.Name)
                    </td>
                    <td>
                        <div>
                            <div style="float: left;">
                                <a asp-area="management" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id" class="btn btn-info">Edit</a>
                            </div>
                            <div>
                                <form class="form-inline" asp-area="management" asp-controller="categories" asp-action="delete">
                                    <input hidden="hidden" name="id" value="@category.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>                            
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}